<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="573dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="360dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:text="We urge users to use essential oils mindfully, research products dutifully, and share information with the community."
                android:padding="8dp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="360dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text=" We believe it is important to remember that our purchasing decisions have the power to shape and define the essential oil industry." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/herby" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/herby" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/herby" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="360dp"
                android:layout_height="69dp"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="We have created Atmosphere with the aim to provide users with simple-to-follow advice regarding the production and use of essential oils." />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="360dp"
                android:layout_height="93dp"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="Essential oils are resource-intensive products, which is why it is more important than ever to buy and use them as sustainably as possible." />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="360dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="All of our blend recipes focus on essential oils that can be produced with the least burden on the ever-dwindling natural environment, avoiding endangered products, and suggest alternatives where possible." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/herby" />

                <ImageView
                    android:id="@+id/imageView30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/herby" />

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/herby" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="360dp"
                android:layout_height="113dp"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text=" Be sure to scroll through our guidelines for use and purchase, read through our sustainability resources, and feel free to contact us should you come across any relevant information that you think might be of help to the aromatherapy community." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/herby" />

                <ImageView
                    android:id="@+id/imageView31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/herby" />

                <ImageView
                    android:id="@+id/imageView111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/herby" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="We have put together this ‘educational’ section to cover how to blend essential oils synergistically, why some essential oils blend better than others, and resources to help successfully create your own blends." />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="We are also committed to providing users with new, relevant content, so be sure to turn on ‘notifications’ within your settings so you receive our ‘blend of the week’ and updates regarding essential oils around the world." />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="All of Atmosphere’s blends have been created to be enjoyed, saved, shared and adapted by you, so get blending!" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>